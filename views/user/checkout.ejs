<script>
function applyCoupon(id) {
    console.log('heloooo');
    $.ajax({
        url: "/applycoupon",
        method: 'post',
        data: {
            id,
        },
        success: (response) => {
    if (response.coupon == false) {
        Swal.fire({
            title: "No Coupon Available",
            icon: "error",
            confirmButtonText: "OK",
        });
    } else if (response.coupon == 'alreadyUsed') {
        Swal.fire({
            title: "This Coupon No Longer Available",
            icon: "error",
            confirmButtonText: "OK",
        });
    }else if (response.coupon == 'used') {
        Swal.fire({
            title: "This Coupon Is Already Used. Try Another One",
            icon: "error",
            confirmButtonText: "OK",
        });
    } else if (response.coupon) {
        Swal.fire({
            title: "Success",
            text: "Coupon Added!",
            icon: "success",
            confirmButtonText: "OK",
        });
    } else {
        Swal.fire({
            title: "Something Wrong",
            icon: "error",
            confirmButtonText: "OK",
        });
    }
}

    });
}

</script>



